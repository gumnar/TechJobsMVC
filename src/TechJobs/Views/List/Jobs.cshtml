<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>

@{
    // TODO #3 - Use the same list display from Views/Search/Index.cshtml
}

<table class="job-listing">
    <tr>
        @foreach (KeyValuePair<string, string> header in ViewBag.jobs[0])
        {
            <th>@header.Key.ToUpper()</th>
        }
    </tr>
    @foreach (Dictionary<string, string> job in ViewBag.jobs)
    {
        <tr>
            @foreach (KeyValuePair<string, string> element in job)
            {
                <th>@element.Value</th>
            }
        </tr>
    }
</table>
